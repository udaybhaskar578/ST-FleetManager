@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Active Maintenance Requests</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create Maintenance Request</a>
    </div>
</div>

<br />
