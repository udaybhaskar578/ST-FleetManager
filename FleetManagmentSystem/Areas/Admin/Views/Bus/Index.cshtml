@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Vehicle List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Add Bus</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="display" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Registration Number</th>
                <th>VIN #</th>
                <th>Make</th>
                <th>Model</th>
                @*<th>Year</th>*@
                <th>Maximum Capacity</th>
                @*<th>Odometer Reading</th>*@
                <th>AC</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/bus.js"></script>
}